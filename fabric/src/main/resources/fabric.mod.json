{
  "schemaVersion": 1,
  "id": "realcamera",
  "version": "${version}",

  "name": "Real Camera",
  "description": "Make the camera more realistic in the first-person view.",
  "authors": [
    "xTracr"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/real-camera",
    "sources": "https://github.com/xTracr/RealCamera",
    "issues": "https://github.com/xTracr/RealCamera/issues"
  },

  "license": "MIT license",
  "icon": "assets/realcamera/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.xtracr.realcamera.RealCameraFabric"
    ],
    "modmenu": [
      "com.xtracr.realcamera.config.RealCameraMenu"
    ]
  },
  "mixins": [
    "realcamera.mixins.json",
    "realcamera-common.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "modmenu": "*",
    "cloth_config": "*"
  }
}
